{ 
   "compilerOptions":{
      "target":"es6",
      "lib": [ "es2015", "dom" ],
      "moduleResolution":"node",
      "module":"commonjs",
      "declaration":true,
      "noLib":false,
      "emitDecoratorMetadata":true,
      "experimentalDecorators":true,
      "sourceMap":true,
      "pretty":true,
      "importHelpers": true,
      "allowUnreachableCode":true,
      "allowUnusedLabels":true,
      "noImplicitAny":true,
      "noImplicitReturns":false,
      "noImplicitUseStrict":false,
      "outDir":"dist/",
      "listFiles":false,
      "noEmitHelpers":true
   },
   "include":[
      "src/**/*"
   ],
   "exclude":[ 
      "node_modules"
   ],
   "compileOnSave":true
 }